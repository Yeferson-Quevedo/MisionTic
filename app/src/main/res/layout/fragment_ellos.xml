<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.activities.fragments.CatalogoFragment"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:id="@+id/contenedorPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="@color/white">
            <ImageView
                android:id="@+id/logo"
                android:layout_marginTop="10dp"
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:background="@drawable/logo1"
                android:scaleType="centerInside"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                >
            </ImageView>
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/banner"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:background="@drawable/home1"
                android:layout_below="@id/logo"
                >
            </ImageView>
            <LinearLayout
                android:id="@+id/contenedor2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_below="@id/banner"
                >
                <TextView

                    android:id="@+id/textHoddie"
                    android:fontFamily="@font/poppinslight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Ellos"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/banner"
                    android:textStyle="bold">

                </TextView>
                <TextView
                    android:fontFamily="@font/poppinslight"
                    android:id="@+id/textHoddie2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:text=": ropa para todos"
                    android:textSize="18sp"
                    android:textColor="@color/grissOscuro"
                    android:layout_below="@id/banner"
                    android:textStyle="bold">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineBlack"
                android:layout_marginTop="0dp"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#a5a5a5"
                android:orientation="horizontal"
                android:layout_below="@id/contenedor2"
                />

            <ScrollView
                android:id="@+id/MainScroll"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/lineBlack"
                android:visibility="visible">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:alignmentMode="alignMargins"
                    android:columnCount="2"
                    android:columnOrderPreserved="false"
                    android:rowCount="3"
                    android:rowOrderPreserved="false">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/polo">

                            </ImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginRight="7dp"
                                    android:src="@drawable/add"></ImageView>

                                <TextView

                                    android:id="@+id/textPolo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/banner"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="Polo: "
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold">

                                </TextView>

                            </LinearLayout>
                            <TextView
                                android:id="@+id/textHoddie2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/poppinslight"
                                android:text="$50.000"
                                android:textColor="@color/grissOscuro"
                                android:textSize="10sp"
                                android:textStyle="bold"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/pantalon">

                            </ImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginRight="7dp"
                                    android:src="@drawable/add"></ImageView>

                                <TextView

                                    android:id="@+id/textPolo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/banner"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="Pantalon: "
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold">

                                </TextView>

                            </LinearLayout>
                            <TextView
                                android:id="@+id/textHoddie2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/poppinslight"
                                android:text="$70.000"
                                android:textColor="@color/grissOscuro"
                                android:textSize="10sp"
                                android:textStyle="bold"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/buzopunto">

                            </ImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginRight="7dp"
                                    android:src="@drawable/add"></ImageView>

                                <TextView

                                    android:id="@+id/textPolo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/banner"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="Buzo de Hilo: "
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold">

                                </TextView>

                            </LinearLayout>
                            <TextView
                                android:id="@+id/textHoddie2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/poppinslight"
                                android:text="$75.000"
                                android:textColor="@color/grissOscuro"
                                android:textSize="10sp"
                                android:textStyle="bold"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ropaelegante">

                            </ImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginRight="7dp"
                                    android:src="@drawable/add"></ImageView>

                                <TextView

                                    android:id="@+id/textPolo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/banner"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="Camisa: "
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold">

                                </TextView>

                            </LinearLayout>
                            <TextView
                                android:id="@+id/textHoddie2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/poppinslight"
                                android:text="$80.000"
                                android:textColor="@color/grissOscuro"
                                android:textSize="10sp"
                                android:textStyle="bold"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/ropaoficina">

                            </ImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginRight="7dp"
                                    android:src="@drawable/add"></ImageView>

                                <TextView

                                    android:id="@+id/textPolo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/banner"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="Vestido Formal: "
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold">

                                </TextView>

                            </LinearLayout>
                            <TextView
                                android:id="@+id/textHoddie2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/poppinslight"
                                android:text="$380.000"
                                android:textColor="@color/grissOscuro"
                                android:textSize="10sp"
                                android:textStyle="bold"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_margin="12dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/buzostilo">

                            </ImageView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginRight="7dp"
                                    android:src="@drawable/add"></ImageView>

                                <TextView

                                    android:id="@+id/textPolo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/banner"
                                    android:fontFamily="@font/poppinslight"
                                    android:text="Buzo Style: "
                                    android:textColor="@color/black"
                                    android:textSize="10sp"
                                    android:textStyle="bold">

                                </TextView>

                            </LinearLayout>
                            <TextView
                                android:id="@+id/textHoddie2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/poppinslight"
                                android:text="$120.000"
                                android:textColor="@color/grissOscuro"
                                android:textSize="10sp"
                                android:textStyle="bold"></TextView>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


