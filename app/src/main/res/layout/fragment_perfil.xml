<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/cuenta_logo"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"

            android:layout_marginTop="20dp"
            android:background="@drawable/logo1"></ImageView>

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cuenta_logo"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/perfil2"
            android:orientation="vertical"></ImageView>


        <LinearLayout
            android:id="@+id/lineBlack"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/perfil"
            android:layout_marginTop="20dp"
            android:background="#a5a5a5"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/NombreUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lineBlack"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="Nombre: "
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lineBlack"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="50dp"
            android:backgroundTint="@color/white"
            android:textColor="#FFFFFF"
            android:background="@color/green"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text=""
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:id="@+id/ApellidoUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/NombreUser"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="Apellido: "
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtApellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtNombre"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="50dp"
            android:textColor="#FFFFFF"
            android:background="@color/white"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text=""
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/Fecha_Nac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ApellidoUser"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="Fecha de nacimiento: "
            android:textSize="18sp"
            android:textStyle="bold"></TextView>
        <EditText
            android:id="@+id/edtNacimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtApellido"
            android:layout_marginLeft="230dp"
            android:layout_marginRight="50dp"
            android:textColor="#FFFFFF"
            android:background="@color/white"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text=""
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/Correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Fecha_Nac"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:text="Email: "
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtCorreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edtNacimiento"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="50dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text=""
            android:textColor="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Correo"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:text="Password: "
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/edtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Correo"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="50dp"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text=""
            android:textColor="#FFFFFF"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/CerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:text="Â¿Cerrar sesion?"
            android:gravity="center"
            android:layout_below="@+id/Password"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="150dp"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:fontFamily="@font/poppinslight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <LinearLayout
            android:id="@+id/lineBlack2"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#a5a5a5"
            android:orientation="horizontal"
            android:layout_below="@id/CerrarSesion"
            />

    </RelativeLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation_bar"
        >
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</androidx.constraintlayout.widget.ConstraintLayout>